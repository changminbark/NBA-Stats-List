<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NBAPlayerList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/sunflower_yellow</item>
        <item name="android:fontFamily">@font/basketball</item>
        <item name="android:background">@color/basketball_orange</item>

    </style>

    <style name="Theme.NBAPlayerList" parent="Base.Theme.NBAPlayerList" />


    <style name="staticText">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/deep_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHeight_percent">0.08</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/sandstone</item>
    </style>
    
    <style name="listText">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>

    <style name="listTextTitle" parent="listText">
        <item name="android:textColor">@color/grayish</item>
    </style>
</resources>